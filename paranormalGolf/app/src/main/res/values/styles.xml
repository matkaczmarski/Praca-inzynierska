<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="MenuButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <!--item name="android:gravity">center_vertical|left</item-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="OptionsButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button</item>
        <!--item name="android:gravity">center_vertical|left</item-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="OptionsButtonLanguage">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_language</item>
        <!--item name="android:gravity">center_vertical|left</item-->
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionsButtonSaveCancel">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_background</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_language</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LevelSelectButton">
        <item name="android:textSize">@dimen/activity_select_level_font</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/level_select_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EndGameButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">#fff</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="PauseDialogButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textSize">20dp</item>=
    </style>

</resources>
