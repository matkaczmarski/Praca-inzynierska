<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="MenuButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:background">@drawable/main_menu_button_selector</item>
        <!--item name="android:gravity">center_vertical|left</item-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="OptionsButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_selector</item>
        <!--item name="android:gravity">center_vertical|left</item-->
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="OptionsButtonLanguage">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_language_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionsLabel">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="OptionsButtonSaveCancel">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">@color/activity_background</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_cancel_save_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LockDialogButton">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/activity_background</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/options_button_cancel_save_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LevelSelectButton">
        <item name="android:textSize">@dimen/activity_select_level_font</item>
        <item name="android:textColor">@color/activity_main_menu_option</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/level_select_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EndGameButton">
        <item name="android:textSize">@dimen/activity_main_menu_option</item>
        <item name="android:textColor">#fff</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_menu_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="PauseDialogButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_menu_button_selector</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/abc_primary_text_material_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HelpButton">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/main_menu_button_selector</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/activity_background</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LockDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EndGameDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PauseDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_top</item>
    </style>

</resources>
